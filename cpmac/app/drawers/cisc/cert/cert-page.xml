<Page
        class="page"
        loaded="onLoaded"
        xmlns:nsListView="nativescript-pro-ui/listview"
        xmlns:FAB="nativescript-floatingactionbutton">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Organizer"/>
    </ActionBar>

    <GridLayout class="page-content" width="auto" height="auto" backgroundColor="white">
        <FAB:fab icon="res://ic_add_white" tap="certTapped" rippleColor="#f1f1f1" class="fab-button"/>

        <StackLayout id="stackCert" orientation="vertical">
            <Label id="storageLabel" class="label-title" text="Actual Skipchains and associated domains"/>
            <ListView id="SkipchainsLabel" items="{{ skipchains }}" orientation="vertical">
                <ListView.itemTemplate>
                    <StackLayout>
                        <Label id="labID" class="list-view-label" text="{{ skipchain.labelID }}" textWrap="true"/>
                        <Label class="list-view-label" text="{{ skipchain.domain }}" textWrap="true"/>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </GridLayout>
</Page>